{
    "compilerOptions": {
        "target": "es2020",
        "outDir": "./dist", //location of the compiled code
        "rootDir": "./src",
        "jsx": "react", // specifies how HTML elements in TSX files are processed
        "jsxFactory": "createElement", // specifies the name of the factory function that is used to replace HTML elements in TSX files
        "moduleResolution": "node", // for typescript to resolve the dependency on the axios package
        "experimentalDecorators": true
    }
}